<div class="row">
    <div class="col-md-12">
        <h2>Log In</h2>
        <hr>
        <form method="post" action="/login">
            <div>
                <div class="col-md-12">
                        <input class="form-control" type="text" id="user_Name" name="userName" placeholder="User Name" required value={{userName}}>
                </div>
            </div>
            <div>
                <div class="col-md-12">
                        <input class="form-control" type="password" id="pass_Word" name="password" placeholder="Password" required>
                </div>
            </div>
            <br>
            <input type="submit" class="btn btn-success pull-right" value="Login">
        </form>
</div>